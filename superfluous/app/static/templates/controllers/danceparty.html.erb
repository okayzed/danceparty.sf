<% set_default("dancers", []) %>

<div class="clearfix container-fluid">
  <div class="row-fluid">
    <div class="photobooth_wrapper">
      <div id="photobooth" class="clearfix">
        <h1>show me your moves!</h1>
        <div id="preview">
          <img class="gif">
        </div>
        <div class="btn" id="hide-booth">no.</div>
        <div class="btn" id="start-camera">start the camera!</div>
        <div class="btn" id="record">let's dance!</div>
        <div class="btn" id="redo-gif">redo</div>
        <div class="btn" id="upload-gif">upload</div>
      </div>
    </div>
  </div>
  <div class="clearfix" style="overflow: hide" id="dances">
      <% _.each(dancers, function(dance) { %>
        <div class="dance">
          <img class="dancer" src="<%= url_for({path: dance }) %>" title="" />
        </div>
      <% }); %>

      <div class="dance">
        <img class="dancer" src="" title="" />
      </div>
  </div>


  <div class="btn" id="show-booth">show booth</div>

</div>
